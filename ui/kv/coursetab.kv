<ClassroomEntry>:
  Label:
    id: session_type
    size_hint_x: 1

  Label:
    id: session_name
    size_hint_x: 9

  Button:
    text: 'Remove'
    size_hint_x: 2

<CoursesTab>:
  orientation: 'vertical'

  __safe_id: [classroom.__self__]

  Widget:
    size_hint: 0, 0
    on_parent: 
      classroom.dismiss()
      
  BoxLayout:
    TextInput:
      hint_text: 'Search'
      on_text: root.filter_sessions(self.text)
      multiline: False
      size_hint_x: 9

    Button:
      text: 'refresh'
      on_press: root.refresh_sessions(); root.refresh_classrooms()

  BoxLayout:
    Button:
      id: classroom_btn 
      text: self.text or 'Classroom'
      on_release: classroom.open(self)
      size_hint: 7, None
      height: '48dp'

    DropDown:
      id: classroom
      size_hint_x: 7
      on_select: root.selected_classroom = args[1]; classroom_btn.text = args[1]['name'] if args[1] else ''

    Spinner:
      # id: session_type
      text: 'Session Type'
      size_hint_x: 3
      values: 'Lecture', 'Tutorial', 'Lab'
      on_text: root.session_type = self.text

    Spinner:
      # id: room_type
      text: 'Room Type'
      size_hint_x: 3
      values: 'classroom', 'computer_lab'
      on_text: root.room_type = self.text


    Button:
      text: 'Add'
      size_hint_x: 1
      on_press: root.add_session()

  RecycleView:
    id: sessions
    size_hint_y: 10
    viewclass: 'ClassroomEntry'
    
    RecycleBoxLayout:
      default_size: None, dp(56)
      default_size_hint: 1, None
      size_hint_y: None
      height: self.minimum_height
      orientation: 'vertical'
